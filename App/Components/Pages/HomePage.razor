@code {
    private string searchTerm = "";
    private string selectedCategory = "Tất cả";
    private List<string> searchHistory = new List<string>();
    private List<VocabularyItem> vocabularyItems = new List<VocabularyItem>();
    private List<VocabularyItem> filteredItems = new List<VocabularyItem>();

    protected override void OnInitialized()
    {
        // Khởi tạo dữ liệu mẫu
        InitializeVocabulary();
        filteredItems = vocabularyItems;

        // Khởi tạo lịch sử tìm kiếm mẫu
        searchHistory.Add("Dog");
        searchHistory.Add("Cat");
        searchHistory.Add("Table");
    }

    private void InitializeVocabulary()
    {
        vocabularyItems.Add(new VocabularyItem { Word = "Dog", Meaning = "Chó", Category = "Động vật" });
        vocabularyItems.Add(new VocabularyItem { Word = "Cat", Meaning = "Mèo", Category = "Động vật" });
        vocabularyItems.Add(new VocabularyItem { Word = "Banana", Meaning = "Chuối", Category = "Động vật" });
        vocabularyItems.Add(new VocabularyItem { Word = "Table", Meaning = "Bàn", Category = "Động vật" });
        vocabularyItems.Add(new VocabularyItem { Word = "Camera", Meaning = "Máy ảnh", Category = "Máy ảnh" });
        vocabularyItems.Add(new VocabularyItem { Word = "Lens", Meaning = "Ống kính", Category = "Máy ảnh" });
        vocabularyItems.Add(new VocabularyItem { Word = "Aperture", Meaning = "Khẩu độ", Category = "Máy ảnh" });
        vocabularyItems.Add(new VocabularyItem { Word = "Image", Meaning = "Hình ảnh", Category = "Hình ảnh" });
        vocabularyItems.Add(new VocabularyItem { Word = "Resolution", Meaning = "Độ phân giải", Category = "Hình ảnh" });
        vocabularyItems.Add(new VocabularyItem { Word = "Vocabulary", Meaning = "Từ vựng", Category = "Từ vựng" });
        vocabularyItems.Add(new VocabularyItem { Word = "Grammar", Meaning = "Ngữ pháp", Category = "Từ vựng" });
    }

    private void OnSearch(ChangeEventArgs e)
    {
        searchTerm = e.Value?.ToString() ?? "";
        FilterItems();
    }

    private void Search()
    {
        FilterItems();

        // Thêm vào lịch sử nếu có kết quả tìm kiếm
        if (!string.IsNullOrEmpty(searchTerm) && !searchHistory.Contains(searchTerm))
        {
            searchHistory.Insert(0, searchTerm);
            // Giới hạn lịch sử tối đa 10 mục
            if (searchHistory.Count > 10)
            {
                searchHistory.RemoveAt(searchHistory.Count - 1);
            }
        }
    }

    private void FilterByCategory(string category)
    {
        selectedCategory = category;
        FilterItems();
    }

    private void FilterItems()
    {
        if (string.IsNullOrEmpty(searchTerm) && selectedCategory == "Tất cả")
        {
            filteredItems = vocabularyItems;
        }
        else
        {
            filteredItems = vocabularyItems.Where(item =>
                (string.IsNullOrEmpty(searchTerm) ||
                 item.Word.ToLower().Contains(searchTerm.ToLower()) ||
                 item.Meaning.ToLower().Contains(searchTerm.ToLower())) &&
                (selectedCategory == "Tất cả" || item.Category == selectedCategory)
            ).ToList();
        }
    }

    private void ClearHistory()
    {
        searchHistory.Clear();
    }

    private void RemoveFromHistory(string item)
    {
        searchHistory.Remove(item);
    }

    private class VocabularyItem
    {
        public string Word { get; set; } = "";
        public string Meaning { get; set; } = "";
        public string Category { get; set; } = "";
    }
}