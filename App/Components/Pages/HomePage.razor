@page "/"

<div class="tra-cuu-container">
    <div class="header">
        <h1>Tra cứu</h1>
        <p class="author">Nguyễn Thanh Liêm</p>
    </div>

    <div class="search-section">
        <div class="search-box">
            <input type="text" placeholder="Nhập từ khóa cần tra cứu..." @bind="searchTerm" @oninput="OnSearch" />
            <button @onclick="Search">
                <i class="fa-solid fa-search"></i>
            </button>
        </div>
    </div>

    <div class="content-section">
        <div class="categories">
            <div class="category-card" @onclick="@(() => FilterByCategory("Tất cả"))">
                <h3>Tất cả</h3>
                <p>Xem tất cả từ vựng</p>
            </div>
            <div class="category-card" @onclick="@(() => FilterByCategory("Động vật"))">
                <h3>Động vật</h3>
                <p>Dog, cat, banana, table, ...</p>
            </div>
            <div class="category-card" @onclick="@(() => FilterByCategory("Máy ảnh"))">
                <h3>Máy ảnh</h3>
                <p>Thuật ngữ về máy ảnh</p>
            </div>
            <div class="category-card" @onclick="@(() => FilterByCategory("Hình ảnh"))">
                <h3>Hình ảnh</h3>
                <p>Thuật ngữ về hình ảnh</p>
            </div>
            <div class="category-card" @onclick="@(() => FilterByCategory("Từ vựng"))">
                <h3>Từ vựng</h3>
                <p>Từ vựng thông dụng</p>
            </div>
        </div>

        <div class="results-section">
            <h2>Kết quả tra cứu</h2>
            <div class="results">
                @if (filteredItems.Count == 0)
                {
                    <p class="no-results">Không tìm thấy kết quả phù hợp.</p>
                }
                else
                {
                    @foreach (var item in filteredItems)
                    {
                        <div class="result-item">
                            <div class="item-content">
                                <h4>@item.Word</h4>
                                <p>@item.Meaning</p>
                                <span class="category-tag">@item.Category</span>
                            </div>
                            <div class="item-actions">
                                <button class="action-btn" title="Nghe phát âm">
                                    <i class="fa-solid fa-volume-high"></i>
                                </button>
                                <button class="action-btn" title="Lưu vào lịch sử">
                                    <i class="fa-solid fa-bookmark"></i>
                                </button>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>

    <div class="history-section">
        <div class="section-header">
            <h2>Lịch sử tra cứu</h2>
            <button class="clear-btn" @onclick="ClearHistory">Xóa lịch sử</button>
        </div>
        <div class="history-items">
            @if (searchHistory.Count == 0)
            {
                <p class="no-history">Chưa có lịch sử tra cứu.</p>
            }
            else
            {
                @foreach (var historyItem in searchHistory)
                {
                    <div class="history-item">
                        <span>@historyItem</span>
                        <button class="remove-btn" @onclick="() => RemoveFromHistory(historyItem)">
                            <i class="fa-solid fa-times"></i>
                        </button>
                    </div>
                }
            }
        </div>
    </div>
</div>

